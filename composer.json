{
  "name": "techlove/gpt-translate",
  "description": "A Laravel package to create a base translation file, and translate it to any language with ChatGPT API",
  "type": "laravel-package",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Techlove\\GptTranslate\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Ricardo Guerrero",
      "email": "richygc@icloud.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "require": {
    "php": "^8.0",
    "openai-php/laravel": "^0.6.3",
    "kkomelin/laravel-translatable-string-exporter": "^1.21",
    "laravel/prompts": "^0.1.10"
  }
}